<Window x:Class="Plethora.Context.Wpf.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:Plethora.Context.Wpf;assembly=Plethora.Context.Wpf"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value ="5" />
        </Style>

        <wpf:WpfContextSourceCollection x:Key="contractContext">
            <wpf:WpfContextSource Name="Contract" Data="{Binding Path=UIElement.Text, RelativeSource={RelativeSource Self}}"/>
            <wpf:WpfContextSource Name="SignedContract" Data="{Binding Path=UIElement.Text, RelativeSource={RelativeSource Self}}"/>
        </wpf:WpfContextSourceCollection>

        <wpf:WpfContextMenu x:Key="contextMenu" />
    </Window.Resources>
    
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Contract:</TextBlock>
                <TextBox wpf:WpfContext.ContextSource="{StaticResource contractContext}" ContextMenu="{StaticResource contextMenu}">
                    1234
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Instrument:</TextBlock>
                <TextBox ContextMenu="{StaticResource contextMenu}">
                    VOD.L

                    <wpf:WpfContext.ContextSource>
                        <wpf:WpfContextSource Name="Instrument" Data="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType=TextBox}}"/>
                    </wpf:WpfContext.ContextSource>
                </TextBox>
            </StackPanel>
            
            <TextBox Name="ContextTextBox"/>
        </StackPanel>
    </Grid>
</Window>
