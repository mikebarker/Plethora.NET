<Window x:Class="Plethora.Context.Wpf.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:Plethora.Context.Wpf;assembly=Plethora.Context.Wpf"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value ="5" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Contract:</TextBlock>
                <TextBox>
                    1234
                    <wpf:WpfContext.ContextCollection>
                        <wpf:WpfContext Name="Bob" Data="27" />
                        <wpf:WpfContext Name="Dylan" Rank="5" Data="78" />
                    </wpf:WpfContext.ContextCollection>
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Instrument:</TextBlock>
                <TextBox>
                    VOD.L
                </TextBox>
            </StackPanel>
            
            <TextBox Name="ContextTextBox">
                
            </TextBox>
        </StackPanel>
    </Grid>
</Window>
